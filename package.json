{
  "name": "@seepine/hono-typeorm",
  "version": "0.1.1",
  "description": "Hono middleware for TypeORM. Easily integrate TypeORM database access, connection, and transaction management into Hono apps.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "hono",
    "typeorm",
    "orm",
    "database",
    "middleware",
    "transaction"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seepine/hono-typeorm.git"
  },
  "homepage": "https://github.com/seepine/hono-typeorm",
  "author": "seepine (https://github.com/seepine)",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write src"
  },
  "peerDependencies": {
    "hono": ">=4.0.0",
    "typeorm": ">=0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "~3.0.9",
    "better-sqlite3": "^12.5.0",
    "hono": "^4.10.3",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typeorm": "^0.3.27",
    "typescript": "^5.8.2",
    "vitest": "~3.0.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}