{
  "name": "@seepine/hono-typeorm",
  "version": "0.1.2",
  "description": "Hono middleware for TypeORM. Easily integrate TypeORM database access, connection, and transaction management into Hono apps.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "keywords": [
    "hono",
    "typeorm",
    "orm",
    "database",
    "middleware"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seepine/hono-typeorm.git"
  },
  "homepage": "https://github.com/seepine/hono-typeorm",
  "author": "seepine (https://github.com/seepine)",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write src *.config.ts"
  },
  "peerDependencies": {
    "hono": ">=4.0.0",
    "typeorm": ">=0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "~3.2.4",
    "better-sqlite3": "^12.5.0",
    "hono": "^4.10.3",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.2",
    "typeorm": "^0.3.27",
    "typescript": "^5.8.2",
    "vitest": "~3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}